<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="stech.poka.utsanee.mylee.RegisterActivity">


    <LinearLayout
        android:padding="@dimen/margin2"
        android:layout_margin="@dimen/margin"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <ImageView
                android:src="@mipmap/ic_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:text="Name :"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout><LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <ImageView
                android:src="@mipmap/ic_sername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:text="Sername :"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout><LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_addess" />

        <EditText
            android:text="Addess :"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout><LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <ImageView
                android:src="@mipmap/ic_user1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:text="User :"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout><LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <ImageView
                android:src="@mipmap/ic_password1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:text="Password :"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>





</RelativeLayout>

